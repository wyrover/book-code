// clocale standard header
#pragma once
#ifndef _CLOCALE_
#define _CLOCALE_
#include <yvals.h>

#ifdef _STD_USING
 #undef _STD_USING
  #include <locale.h>
 #define _STD_USING

#else /* _STD_USING */
 #include <locale.h>
#ifndef LC_MESSAGES
 #define LC_MESSAGES	(LC_TIME + 1)
#endif /* LC_MESSAGES */

 #ifndef RC_INVOKED
  #if _GLOBAL_USING
_STD_BEGIN
using ::lconv; using ::localeconv; using ::setlocale;
_STD_END
  #endif /* _GLOBAL_USING */
 #endif /* RC_INVOKED */

#endif /* _STD_USING */
#endif /* _CLOCALE_ */

